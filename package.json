{
  "name": "ltv-calculator",
  "version": "0.4.0",
  "description": "Simply LTV / ARPU / Average Duration calcurator",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --declaration --outDir dist",
    "tsc": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:ci": "npm run test && npm run lint && npm run typecheck",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "doc": "typedoc",
    "doc:dev": "concurrently \"typedoc --watch\" \"serve docs -l 3000\"",
    "prepublishOnly": "npm run build",
    "release": "np"
  },
  "keywords": [
    "ltv"
  ],
  "bugs": {
    "url": "https://github.com/hideokamoto/ltv-calculator/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hideokamoto/ltv-calculator.git"
  },
  "author": "Hidetaka Okamoto <info@wp-kyoto.net> (https://wp-kyoto.net)",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "np": {
    "yarn": false,
    "testScript": "test:ci"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.10.2",
    "@vitest/ui": "^4.0.10",
    "concurrently": "^9.1.0",
    "serve": "^14.2.4",
    "tslib": "^2.8.1",
    "np": "^9.2.0",
    "typedoc": "^0.26.0",
    "typescript": "^5.7.2",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^4.0.10"
  }
}
