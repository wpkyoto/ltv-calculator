{
  "name": "ltv-calculator",
  "version": "0.1.0",
  "description": "Simply LTV / ARPU / Average Duration calcurator",
  "main": "dist/index.js",
  "scripts": {
    "build": "rollup -c",
    "tsc": "tsc",
    "test": "jest",
    "lint": "eslint 'libs/*.ts'",
    "doc": "typedoc --out docs libs/ && touch docs/.nojekyll",
    "postversion": "git push origin $(git describe --abbrev=0 --tags)",
    "test:watch": "jest --watch",
    "test:dev": "jest --watch --silent=false --verbose false --coverage"
  },
  "keywords": [
    "ltv"
  ],
  "bugs": {
    "url": "https://github.com/hideokamoto/ltv-calculator/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hideokamoto/ltv-calculator.git"
  },
  "author": "Hidetaka Okamoto <info@wp-kyoto.net> (https://wp-kyoto.net)",
  "license": "MIT",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|js)"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "24.9.1",
    "@types/node": "12.12.43",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "@typescript-eslint/typescript-estree": "2.34.0",
    "eslint": "6.8.0",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-node": "9.2.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "lint-staged": "9.5.0",
    "rollup": "2.79.2",
    "rollup-plugin-typescript2": "0.24.3",
    "ts-jest": "24.3.0",
    "tslib": "1.13.0",
    "typedoc": "0.15.8",
    "typescript": "3.9.3"
  }
}
